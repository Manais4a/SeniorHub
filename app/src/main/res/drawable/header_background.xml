<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Gradient background for senior-friendly header -->
    <gradient
        android:angle="135"
        android:startColor="@color/senior_profile_light"
        android:centerColor="@color/senior_accent"
        android:endColor="@color/senior_health_light"
        android:type="linear" />
    
    <!-- Rounded corners for modern look -->
    <corners android:radius="16dp" />
    
    <!-- Subtle border for definition -->
    <stroke
        android:width="2dp"
        android:color="@color/senior_profile" />
    
    <!-- Soft shadow effect -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
        
</shape>