<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardHealthLog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/senior_health"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@color/senior_health_light"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <!-- Health Log Icon -->
        <ImageView
            android:id="@+id/ivHealthLogIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_health"
            app:tint="@color/senior_health"
            android:layout_marginEnd="20dp"
            android:contentDescription="Health record icon" />

        <!-- Health Log Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHealthLogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Type"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/senior_primary_text"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05"
                tools:text="Blood Pressure" />

            <TextView
                android:id="@+id/tvHealthLogValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="8dp"
                tools:text="120/80 mmHg" />

            <TextView
                android:id="@+id/tvHealthLogNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="16sp"
                android:textColor="@color/senior_secondary_text"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp"
                tools:text="Morning reading" />

            <TextView
                android:id="@+id/tvHealthLogTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="16sp"
                android:textColor="@color/senior_secondary_text"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="8dp"
                tools:text="Today, 2:00 PM" />

        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewHealthLogDetails"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="View health log details"
            android:fontFamily="sans-serif-black"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:tooltipText="View details"
            app:backgroundTint="@color/senior_health"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_visibility"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

