<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/senior_health"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@color/senior_health_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Health Record Icon -->
        <ImageView
            android:id="@+id/ivHealthIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_health"
            app:tint="@color/senior_health"
            android:contentDescription="Health record icon" />

        <!-- Health Record Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHealthType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/senior_primary_text"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/tvHealthValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/senior_health"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvHealthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/senior_secondary_text"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvHealthStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/senior_health"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="View health record details"
            android:fontFamily="sans-serif-black"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:tooltipText="View details"
            app:backgroundTint="@color/senior_health"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_visibility"
            app:iconSize="24dp"
            app:iconTint="@color/white" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

