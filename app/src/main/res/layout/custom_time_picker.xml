<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <!-- Left Panel - Selected Time Display -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/senior_profile"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvAmPm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Right Panel - Time Picker -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Time Picker Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textColor="@color/senior_primary_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Time Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Hour Picker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hour"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btnHourUp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chevron_up"
                        android:background="@drawable/time_button_background"
                        android:padding="8dp"
                        android:contentDescription="Increase hour" />

                    <TextView
                        android:id="@+id/tvHourValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/senior_primary_text"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <ImageView
                        android:id="@+id/btnHourDown"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chevron1_down"
                        android:background="@drawable/time_button_background"
                        android:padding="8dp"
                        android:contentDescription="Decrease hour" />
                </LinearLayout>
            </LinearLayout>

            <!-- Colon Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/senior_primary_text"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- Minute Picker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minute"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btnMinuteUp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chevron_up"
                        android:background="@drawable/time_button_background"
                        android:padding="8dp"
                        android:contentDescription="Increase minute" />

                    <TextView
                        android:id="@+id/tvMinuteValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="@color/senior_primary_text"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <ImageView
                        android:id="@+id/btnMinuteDown"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chevron1_down"
                        android:background="@drawable/time_button_background"
                        android:padding="8dp"
                        android:contentDescription="Decrease minute" />
                </LinearLayout>
            </LinearLayout>

            <!-- AM/PM Picker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Period"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btnAmPmUp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chevron_up"
                        android:background="@drawable/time_button_background"
                        android:padding="8dp"
                        android:contentDescription="Toggle AM/PM" />

                    <TextView
                        android:id="@+id/tvAmPmValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM"
                        android:textColor="@color/senior_primary_text"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <ImageView
                        android:id="@+id/btnAmPmDown"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chevron1_down"
                        android:background="@drawable/time_button_background"
                        android:padding="8dp"
                        android:contentDescription="Toggle AM/PM" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textColor="@color/senior_secondary_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cancel time selection" />

            <TextView
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="@color/senior_primary_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Confirm time selection" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
