<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_sm"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_md">

        <!-- Header Row with Name and Primary Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xs"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvContactName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrimaryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_badge_background"
                android:paddingHorizontal="@dimen/space_sm"
                android:paddingVertical="@dimen/space_xs"
                android:text="@string/primary"
                android:textColor="@color/white"
                android:textSize="@dimen/text_caption"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Relationship -->
        <TextView
            android:id="@+id/tvContactRelationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xs"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_body" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvContactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xs"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="@dimen/space_xs"
            android:drawableTint="@color/focus_blue"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_body" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvContactEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xs"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/space_xs"
            android:drawableTint="@color/focus_blue"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_body" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvContactAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_sm"
            android:drawableStart="@drawable/ic_home"
            android:drawablePadding="@dimen/space_xs"
            android:drawableTint="@color/focus_blue"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_body" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnSetPrimary"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/space_sm"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/set_as_primary"
                android:src="@drawable/ic_star"
                android:tooltipText="@string/set_as_primary"
                app:tint="@color/focus_blue" />

            <ImageButton
                android:id="@+id/btnEditContact"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/space_sm"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:src="@drawable/ic_edit"
                android:tooltipText="@string/edit"
                app:tint="@color/focus_blue" />

            <ImageButton
                android:id="@+id/btnDeleteContact"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"
                android:src="@drawable/ic_delete"
                android:tooltipText="@string/delete"
                app:tint="@color/emergency_red" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>