<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/space_md">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_terms"
            android:layout_marginEnd="@dimen/space_sm"
            android:contentDescription="Terms icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SeniorHub Terms of Use"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:textStyle="bold"
            android:text="@string/seniorhub_terms_of_use"
            android:textColor="@color/primary_text"
            android:textSize="15sp" />

    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTermsDialogYes"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_sm"
            android:backgroundTint="@color/focus_color"
            android:text="Okay"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="20dp" />

    </LinearLayout>

</LinearLayout>
