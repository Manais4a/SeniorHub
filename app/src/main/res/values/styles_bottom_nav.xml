<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Text Appearance (Active) -->
    <style name="BottomNavigationView.TextAppearance.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/focus_blue</item>
    </style>

    <!-- Bottom Navigation Text Appearance (Inactive) to pair with Active -->
    <style name="BottomNavigationView.TextAppearance.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/nav_inactive</item>
    </style>

    <!-- Bottom Navigation Style dedicated to SeniorHub -->
    <style name="Widget.SeniorHub.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">28dp</item>
        <item name="itemIconTint">@color/focus_blue</item>
        <item name="itemTextColor">@color/focus_blue</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.TextAppearance.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.TextAppearance.Inactive</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>