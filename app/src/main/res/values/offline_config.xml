    <string name="offline_error_no_internet">No internet connection available</string>
    <string name="offline_error_sync_failed">Failed to sync data</string>
    <string name="offline_error_cache_full">Cache storage is full</string>
    <string name="offline_error_data_corrupted">Data appears to be corrupted</string>
    
    <!-- Offline Success Messages -->
    <string name="offline_success_data_synced">Data successfully synced</string>
    <string name="offline_success_cache_cleared">Cache successfully cleared</string>
