    <integer name="offline_sync_interval_minutes">30</integer>
    
    <!-- Offline Features -->
    <bool name="offline_emergency_services">true</bool>
    <bool name="offline_health_logging">true</bool>
    <bool name="offline_benefits_tracking">true</bool>
    <bool name="offline_profile_management">true</bool>
    <bool name="offline_social_features">false</bool>
    <bool name="offline_voice_assistance">true</bool>
    
    <!-- Offline Data Priorities -->
    <string-array name="offline_priority_data">
        <item>emergency_contacts</item>
        <item>user_profile</item>
        <item>health_records</item>
        <item>benefits_info</item>
        <item>medication_reminders</item>
        <item>emergency_services</item>
